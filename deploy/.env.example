# KTP Deployment Environment Variables
# Copy to .env and fill in your values
# These override settings in config.yaml

# ============================================
# Cluster Credentials
# ============================================
# Format: KTP_<CLUSTER>_<FIELD>
# Cluster names must match those in config.yaml

# Cluster 1 (e.g., Atlanta)
KTP_CLUSTER1_HOST=
KTP_CLUSTER1_USER=dodserver
KTP_CLUSTER1_PASSWORD=

# Cluster 2 (e.g., Dallas)
KTP_CLUSTER2_HOST=
KTP_CLUSTER2_USER=dodserver
KTP_CLUSTER2_PASSWORD=

# Test Cluster
KTP_TEST_HOST=
KTP_TEST_USER=dodserver
KTP_TEST_PASSWORD=

# ============================================
# Data Server
# ============================================
KTP_DATA_SERVER_IP=

# ============================================
# Discord Integration (for config templates)
# ============================================
KTP_DISCORD_RELAY_URL=
KTP_DISCORD_AUTH_SECRET=
KTP_DISCORD_MATCH_CHANNEL=
KTP_DISCORD_ADMIN_CHANNEL=

# ============================================
# HLTV API (for config templates)
# ============================================
KTP_HLTV_API_URL=
KTP_HLTV_API_KEY=

# ============================================
# Deployment Notifications (--notify-discord)
# ============================================
# Uses Discord relay for deployment status messages
KTP_DISCORD_RELAY_SECRET=
KTP_DISCORD_CHANNEL_ID=
